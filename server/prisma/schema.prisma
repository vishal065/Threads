generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id              String  @id @default(uuid())
  firstName       String  @map("first_name") //while coding we use firstName but it database it store like first_name  
  lastName        String? @map("last_name")
  profileImageURL String? @map("profile_image_url")
  username        String  @unique
  email           String  @unique
  password        String

  @@map("users") // database k table ka naam users hoga
}
